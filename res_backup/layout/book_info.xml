<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/book_info_root"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/back"
>
	<LinearLayout
		android:id="@+id/book_info_button_panel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:paddingLeft="2dip"
		android:paddingRight="2dip"
		android:paddingBottom="20dip"
		android:baselineAligned="false"
	>
		<LinearLayout
			android:layout_weight="0.21"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		/>
		<Button
			android:id="@+id/book_info_button_open"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:text="开始阅读"
			android:background="@drawable/normal_button_selector"
			android:layout_height="wrap_content"
		/>
		<LinearLayout
			android:layout_weight="0.35"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		/>
		<Button
			android:id="@+id/book_info_button_import"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:text="导出书籍"
			android:background="@drawable/normal_button_selector"
			android:layout_height="wrap_content"
		/>
		<LinearLayout
			android:layout_width="0dip"
			android:layout_weight="0.35"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		/>
		<Button
			android:id="@+id/book_info_button_app"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:text="精品推荐"
			android:background="@drawable/normal_button_selector"
			android:layout_height="wrap_content"
		/>
		<LinearLayout
			android:layout_width="0dip"
			android:layout_weight="0.21"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		/>
	</LinearLayout>
</RelativeLayout>
