<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
     android:background="@drawable/general__shared_list_item_select"
     android:paddingTop="10dip" 
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">

        <TextView android:id="@+id/reader_bookmark_item_percent" 
            android:layout_width="0dip" 
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="#ff7c5f5b"
            android:paddingLeft="10dip"
            style="?android:attr/textAppearanceSmall" />
        <TextView android:id="@+id/reader_bookmark_item_time" 
             android:layout_width="0.0dip" 
             android:textColor="#ff7c5f5b"
             android:layout_height="wrap_content"
			 android:layout_weight="2.0"
			 style="?android:attr/textAppearanceSmall" />
    </LinearLayout>
    <TextView android:textSize="16.0sp" 
        android:textColor="#ff000000"
         android:id="@+id/reader_bookmark_item_content" 
         android:paddingTop="5.0dip" 
         android:paddingBottom="5.0dip" 
         android:paddingLeft="10dip"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" 
         android:lines="3"
         style="?android:attr/textAppearanceMedium" />
</LinearLayout>
