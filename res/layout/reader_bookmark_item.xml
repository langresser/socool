<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
    android:background="@drawable/list_selector"
     android:paddingTop="13.0dip" 
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <ImageView android:padding="2.0dip"
             android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:src="@drawable/reader_bookmark_percent" 
               android:contentDescription="@string/image_descriptoin" />
        <TextView android:textColor="@color/textcolor" 
            android:id="@+id/reader_bookmark_item_percent" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
             style="?android:attr/textAppearanceSmall" />
        <ImageView android:paddingLeft="20.0dip"
             android:paddingRight="2.0dip" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content" 
             android:src="@drawable/reader_bookmark_time" 
             android:contentDescription="@string/image_descriptoin" />
        <TextView android:textColor="@color/textcolor"
             android:id="@+id/reader_bookmark_item_time" 
             android:layout_width="0.0dip" 
             android:layout_height="wrap_content"
			 android:layout_weight="1.0"
			 style="?android:attr/textAppearanceSmall" />
        <ImageView android:id="@+id/reader_bookmark_item_delete"
             android:paddingLeft="20.0dip" 
             android:paddingTop="5.0dip" 
             android:paddingRight="15.0dip"
              android:paddingBottom="5.0dip"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/reader_bookmark_delete" 
                android:contentDescription="@string/image_descriptoin" />
    </LinearLayout>
    <View android:background="#ffcccbbc"
         android:layout_width="fill_parent" 
         android:layout_height="3.0dip" 
         android:contentDescription="@string/image_descriptoin" />
    <TextView android:textSize="16.0sp" 
        android:textColor="@color/textcolor"
         android:id="@+id/reader_bookmark_item_content" 
         android:paddingTop="5.0dip" 
         android:paddingBottom="5.0dip" 
         android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:lines="3"
           style="?android:attr/textAppearanceMedium" />
</LinearLayout>
