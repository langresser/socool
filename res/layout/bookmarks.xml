<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/idxbg" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
       <LinearLayout android:orientation="horizontal" 
           android:id="@+id/table_view"
            android:layout_width="fill_parent" 
            android:layout_height="50.0dip"
             android:layout_marginLeft="32dip" 
             android:layout_marginRight="32dip">
           <Button android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/book_content" 
               android:background="@drawable/select_left_tab_selector" 
               android:layout_width="0dip" 
               android:layout_height="50.0dip"
                android:text="目录" 
                android:layout_weight="1.0" 
                style="@style/setting_text_for_button" />
           <Button android:gravity="center" 
               android:layout_gravity="center" 
               android:id="@+id/book_mark"
                android:background="@drawable/select_mid_tab_selector"
                 android:layout_width="0dip"
                  android:layout_height="50.0dip" 
                  android:text="书签" 
                  android:layout_weight="1.0"
                   style="@style/setting_text_for_button" />
           <Button android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/book_comment" 
               android:background="@drawable/select_right_tab_selector" 
               android:layout_width="0dip" 
               android:layout_height="50.0dip"
                android:text="书摘" 
                android:layout_weight="1.0" 
                style="@style/setting_text_for_button" />
       </LinearLayout>
       <FrameLayout android:orientation="vertical" 
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent">
	    <ExpandableListView android:id="@+id/chapterjuan_listview" 
		        android:paddingLeft="5.0dip" 
		        android:paddingRight="10.0dip" 
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent" 
		        android:cacheColorHint="@android:color/transparent" 
		        android:divider="@color/listview_divider_color"
	            android:dividerHeight="3.0px" 
	            android:groupIndicator="@null"
	            android:fastScrollEnabled="true" />
	    
	    <ListView android:id="@+id/boomark_list" 
	        android:paddingLeft="10.0dip" 
	        android:paddingRight="10.0dip" 
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent" 
	        android:cacheColorHint="@android:color/transparent" 
	        android:divider="@color/listview_divider_color" 
	        android:dividerHeight="3.0px" 
	        android:fastScrollEnabled="true" />
	    <ListView android:id="@+id/bookcomment_list" 
	        android:paddingLeft="10.0dip" 
	        android:paddingRight="10.0dip" 
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent" 
	        android:cacheColorHint="@android:color/transparent" 
	        android:divider="@color/listview_divider_color" 
	        android:dividerHeight="3.0px" 
	        android:fastScrollEnabled="true" />
	    <ImageButton
            android:id="@+id/app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|right"
            android:src="@drawable/more_app_selector"/>
    </FrameLayout>
</LinearLayout>
