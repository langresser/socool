<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical" 
    android:paddingTop="13.0dip" 
    android:paddingBottom="13.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ExpandableListView android:id="@+id/reader_chapterjuan_listview" 
        android:paddingLeft="20.0dip" 
        android:paddingRight="20.0dip" 
        android:layout_width="fill_parent"
         android:layout_height="fill_parent" 
         android:cacheColorHint="@android:color/transparent" 
         android:divider="@color/listview_divider_color"
          android:dividerHeight="3.0px" 
          android:background="#ffeeeeee"
          android:groupIndicator="@drawable/group_selector"
          android:fastScrollEnabled="true" />
    <RelativeLayout android:id="@+id/reader_chapterjuan_cover" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        <TextView android:textColor="@color/textcolor"
             android:id="@+id/reader_chapter_hint" 
             android:padding="10.0dip" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
              android:text="@string/read_view_hint_chapter_1" 
              android:layout_centerInParent="true" 
              style="?android:attr/textAppearanceSmall" />
        <ImageView android:id="@+id/reader_chapter_image" 
            android:padding="20.0dip" 
            android:layout_width="wrap_content"
             android:layout_height="wrap_content" 
             android:layout_above="@id/reader_chapter_hint" 
             android:layout_centerHorizontal="true" 
             android:contentDescription="@string/image_descriptoin" />
        <LinearLayout android:orientation="vertical"
             android:id="@+id/reader_chapter_start_analisys"
              android:padding="20.0dip"
               android:clickable="true" 
               android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_below="@+id/reader_chapter_hint" 
                android:layout_centerHorizontal="true">
            <TextView android:textColor="@color/reader_chapter_start_analisys_text_color" 
                android:gravity="center" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="@string/read_view_hint_chapter_2" 
                android:singleLine="true"
                 style="?android:attr/textAppearanceMedium" />
            <ImageView android:background="@drawable/reader_chapter_underline" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:contentDescription="@string/image_descriptoin" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
