<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_brightness"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="8.0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_neight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffffff"
            android:paddingTop="4dip"
            android:text="夜间模式" />

        <ImageButton
            android:id="@+id/night_button"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_switch_selector"
            android:paddingLeft="20dip"/>

    </LinearLayout>
    
    <LinearLayout android:gravity="center" android:layout_width="fill_parent" 
        android:paddingTop="10dip"
        android:layout_height="wrap_content">
        <ImageButton android:id="@+id/btn_light_decreases"
            android:src="@drawable/light_button_left"
            android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
 
        <SeekBar android:id="@+id/bar_light"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:maxHeight="15.0dip"
            android:max="100"
            android:minWidth="15.0dip" 
            android:layout_weight="1.0" />
        
        <ImageButton android:id="@+id/btn_light_increase"
            android:src="@drawable/light_button_right"
            android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
 	</LinearLayout>
</LinearLayout>
